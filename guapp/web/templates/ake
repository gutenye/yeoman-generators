#!/usr/bin/env bash

main() {
  npm start
}

build() {
  npm run build
}

test() {
  npm test
}

design() {
  node scripts/start-design.js
}

link() {
  yarn link gureact
}

unlink() {
  yarn unlink gureact
  yarn
}

case "$1" in
  '' ) main ;;
  deploy ) ../ake "$@" ;;
  b | build ) build ;;
  t | test ) test ;;
  design ) design ;;
  link ) link ;;
  unlink ) unlink ;;
  analyze ) source-map-explorer build/static/js/main.*.{js,map} ;;
esac
