{
  "name": "<%=project%>",
  "version": "1.0.0",
  "author": "Guten",
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^0.0.0",
    "lint-staged": "^0.0.0",
    "prettier": "^0.0.0"
  }
}
