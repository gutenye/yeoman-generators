{
  "name": "<%=project%>",
  "version": "0.0.1",
  "description": "FIXME",
  "main": "lib/app.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTest.ts",
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js)"
    ]
  },
  "eslintConfig": {
    "extends": "guten-typescript"
  },
  "devDependencies": {
    "@types/jest": "^0.0.0",
    "@types/node": "^0.0.0",
    "eslint-config-guten-typescript": "^0.0.0",
    "jest": "^0.0.0",
    "ts-jest": "^0.0.0",
    "typescript": "^0.0.0",
    "nodemon": "^0.0.0",
    "ts-node": "^0.0.0"
  }
}
